# Solana Configuration
NEXT_PUBLIC_SOLANA_RPC_HOST=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Wallet Configuration
WALLET_PATH=~/.config/solana/id.json
WALLET_SECRET_KEY_BASE58=your_base58_encoded_secret_key_here
WALLET_PUBLIC_KEY=your_wallet_public_key_here

# Collection Configuration
NEXT_PUBLIC_COLLECTION_MINT_ADDRESS=your_collection_mint_address_here

# Escrow Program Configuration
ESCROW_PROGRAM_ID=your_escrow_program_id_here
NEXT_PUBLIC_ESCROW_PDA=your_escrow_pda_here

# Candy Machine Configuration
NEXT_PUBLIC_CANDY_MACHINE_ID=your_candy_machine_id_here
NEXT_PUBLIC_COLLECTION_MINT_ADDRESS=your_collection_mint_address_here
NEXT_PUBLIC_TREASURY=your_treasury_wallet_address_here
NEXT_PUBLIC_CANDY_GUARD_ADDRESS=your_candy_guard_address_here
NEXT_PUBLIC_ESCROW_PDA=your_escrow_pda_here

# Treasury Configuration
NEXT_PUBLIC_TREASURY=your_treasury_address_here

# Pinata Configuration
PINATA_JWT_TOKEN=your_pinata_jwt_token_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_key_here

# Image URIs
COLLECTION_IMAGE_URI=https://gateway.pinata.cloud/ipfs/your_collection_image_hash/collection.png
OPEN_EDITION_IMAGE_URI=https://gateway.pinata.cloud/ipfs/your_open_edition_image_hash/collection.png

# Webhook Configuration (if using)
WEBHOOK_URL=https://your-server.com/api/mint-hook
WEBHOOK_PORT=3001
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key_here

# RPC Configuration (alternative)
RPC_URL=https://api.devnet.solana.com

# API Configuration
# These are used by the API endpoints in pages/api/
# WALLET_SECRET_KEY_BASE58 and NEXT_PUBLIC_SOLANA_RPC_HOST are already defined above

